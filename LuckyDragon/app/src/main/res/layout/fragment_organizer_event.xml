<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/seeMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="See Map"
        android:layout_marginStart="10dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waitlist:"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <android.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/waitlistCapacityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: No Limit"
            android:textSize="25sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/noWaitlisteesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nobody has signed up yet."
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/eventWaitlistListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>