<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/EntrantProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <Button
            android:id="@+id/scanQRButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr_code"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attending"
                android:textStyle="bold"
                android:textSize="20sp">
            </TextView>
            <com.example.luckydragon.NonScrollListView
                android:id="@+id/entrantProfileAttendingListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.example.luckydragon.NonScrollListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waitlisted"
                android:textStyle="bold"
                android:textSize="20sp" >
            </TextView>
            <com.example.luckydragon.NonScrollListView
                android:id="@+id/entrantProfileWaitlistedListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.example.luckydragon.NonScrollListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invited:"
                android:textStyle="bold"
                android:textSize="20sp" >
            </TextView>
            <com.example.luckydragon.NonScrollListView
                android:id="@+id/entrantProfileInvitedListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.example.luckydragon.NonScrollListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled:"
                android:textStyle="bold"
                android:textSize="20sp" >
            </TextView>
            <com.example.luckydragon.NonScrollListView
                android:id="@+id/entrantProfileCancelledListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.example.luckydragon.NonScrollListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>